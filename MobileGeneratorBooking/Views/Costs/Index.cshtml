@model IEnumerable<MobileGeneratorBooking.Models.Costs>

@{
    ViewBag.Title = "Costs";
}

<h2>@ViewBag.Title</h2>

<br />
<p>
    @Html.ActionLink("Create New Costs >>", "Create", null, new { @class = "btn btn-success" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.DieselCostPerLitre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CostPerCustomer)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CostPerHour)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @string.Format("{0:C}", item.DieselCostPerLitre) per litre
        </td>
        <td>
            @string.Format("{0:C}", item.CostPerCustomer) per customer
        </td>
        <td>
            @string.Format("{0:C}", item.CostPerHour) per customer
        </td>
        <td>
            @Html.ActionLink("Details", "Details", new { id = item.Id }) |
            @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
